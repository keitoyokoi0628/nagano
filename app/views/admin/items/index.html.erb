<h1>商品一覧</h1>

 <% @items.each do |item| %>

  <h4>商品ID</h4>
  <%= item.id %>

  <h4>商品名</h4>
  <%= link_to item.name, admin_item_path(item.id) %>

  <h4>税抜価格</h4>
  <%= item.price %>

  <h4>ジャンル</h4>
  <%= item.genre.name %>

  <h4>ステータス</h4>
  <% if item.is_active %>
   <p>販売中</p>
  <% else %>
   <p>販売停止中</p>
  <% end %>




<% end %>
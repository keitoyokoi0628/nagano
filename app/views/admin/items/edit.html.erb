<h4 class="text-left p-5">商品編集</h4>

 <div class="container">
  <div class="row">
   <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
    <div class="col">
     <p>商品画像　　　　　<%= f.file_field :image, accept: "image/*" %></p>

     <p>商品名　　　　　　<%= f.text_field :name %></p>

     <p>商品説明　　　　　<%= f.text_area :introduction %></p>

     <p>ジャンル　　　　　<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></p>

     <p>税抜価格　　　　　<%= f.number_field :price %>円</p>

     <p>販売ステータス<a>　　　　　</a><%= f.radio_button :is_active, 'true' %>
     <%= f.label :is_active, '販売中', value: true %>
     <%= f.radio_button :is_active, 'false' %>
     <%= f.label :is_active, '販売停止中', value: false %></p>

     <p><%= f.submit '変更を保存', class: "btn btn-success" %></p>
    </div>
  </div>
 </div>
   <% end %>
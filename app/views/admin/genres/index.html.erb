<%= form_with model: @genre, url: admin_genres_path do |f| %>
<div class="container">
 <h4 class="text-left p-5">ジャンル一覧・追加</h4>
 <div class="row">

   <div class="col-7">
    <p>ジャンル名　　　<%= f.text_field :name %></p>
   </div>
   <div class="col-5">
    <%= f.submit '新規登録', class: "btn btn-success" %>
   </div>

 </div>
   <table class="table">
 　<% @genres.each do |genre| %>
    <thead>
     <tr>
      <th>ジャンル</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
     <tr>
      <td><%= genre.name %></td>
      <td> <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
     </tr>
    </tbody>



 　<% end %>
 　</table>
</div>
<% end %>
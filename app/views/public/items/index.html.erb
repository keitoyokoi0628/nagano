<div class="container">

  <h4 class="text p-5">商品一覧</h4>

  <div class="row">
    <% @items.each do |item| %>
     <div class="col-3">
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>

        <h4>商品名</h4>
        <%= link_to item.name, item_path(item.id) %>

        <h4>¥<%= item.price %></h4>
     </div>
    <% end %>
  </div>
</div>
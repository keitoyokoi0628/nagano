<div class="container">
 <h4 class="text-left p-5">注文履歴一覧</h4>

 <table class="table">
   <% @orders.each do |orders| %>
    <thead>
     <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
     </tr>
    </thead>

    <thead>
     <tr>
      <td><%= orders.created_at %></td>
      <td>〒<%= orders.postal_code %><%= orders.address %><br><%= orders.name %></td>
      <td><%= orders.name %></td>
      <td><%= orders.total_payment %></td>
      <td><%= link_to "表示する", order_path(orders.id) %></td>
     </tr>
    </thead>


   <% end %>
 </table>

</div>
<h1>配送先登録/一覧</h1>

<%= form_with model: @address do |f| %>
 <h4>郵便番号(ハイフンなし)</h4>
 <%= f.text_field :postal_code %>
 <h4>住所</h4>
 <%= f.text_field :address %>
 <h4>宛名</h4>
 <%= f.text_field :name %>

 <p><%= f.submit '新規登録' %></p>


<% end %>

<% @addresses.each do |address| %>

 <h4>郵便番号</h4>
 <%= address.postal_code %>

 <h4>住所</h4>
 <%= address.address %>

 <h4>宛名</h4>
 <%= address.name %>

 <h4><%= link_to "編集する", edit_address_path(address.id) %></h4>
 <h4><%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "配送先を削除しますか？" %></h4>

<% end %>